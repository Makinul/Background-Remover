<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/shadow1">
        <shape android:shape="rectangle">
            <solid android:color="#22ffffff" />

            <padding
                android:top="2dp" />
        </shape>
    </item>

    <item android:id="@+id/shadow2">
        <shape android:shape="rectangle">
            <solid android:color="#44ffffff" />

            <padding
                android:top="2dp" />
        </shape>
    </item>

    <item android:id="@+id/shadow3">
        <shape android:shape="rectangle">
            <solid android:color="#66ffffff" />

            <padding
                android:top="2dp" />
        </shape>
    </item>

    <item android:id="@+id/shadow4">
        <shape android:shape="rectangle">
            <solid android:color="#88ffffff" />

            <padding
                android:top="2dp" />
        </shape>
    </item>

    <item android:id="@+id/shadow5">
        <shape android:shape="rectangle">
            <solid android:color="#aaffffff" />

            <padding
                android:top="2dp" />
        </shape>
    </item>

    <item android:id="@+id/shadow6">
        <shape android:shape="rectangle">
            <solid android:color="#ccffffff" />

            <padding
                android:top="2dp" />
        </shape>
    </item>

    <item android:id="@+id/border">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />

            <padding
                android:top="2dp" />

            <corners
                android:topLeftRadius="@dimen/default_margin"
                android:topRightRadius="@dimen/default_margin" />
        </shape>
    </item>

    <item android:id="@+id/main_bg">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />

            <corners
                android:topLeftRadius="@dimen/default_margin"
                android:topRightRadius="@dimen/default_margin" />
        </shape>
    </item>
</layer-list>